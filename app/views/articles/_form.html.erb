<%= form_for(@article) do |f| %>
   <% @article.errors.full_messages.each do |message| %>
      - <%= message %>
   <% end %>
   <%= f.text_field :title,{placeholder: "Este es el titulo",class: "input_control"} %>
   <%= f.text_area :body, {placeholder: "Aqui va el texto", class: "textarea_control"} %>
   <%= f.submit "Guardar", {class: "btn_submit"} %>

<% end %>
